.slider-home
	background url('../img/slider.jpg')center no-repeat
	background-size cover
	padding 150px 0px 80px
	position relative
	h2
		font-size 60px
		font-family "Smoothie Shoppe"
		text-align center
		color #fff
		line-height 77px
		font-weight 700
		text-shadow 0px 0px 13px #000
.hr-slider-arriba
	position relative
	span
		width 16.66%
		border 4px solid
		float left
		&.uno
			border-color #2c5e2c
		&.dos
			border-color #467b31
		&.tres
			border-color #204191
		&.cuatro
			border-color #f8b400
		&.cinco
			border-color #dd4617
		&.seis
			border-color #78423b
.bg-verde
	padding 20px
	margin-top 40px
	margin-bottom 40px
	background #467b31
	background -moz-linear-gradient(left,#467b31 21%,#fff 20%)
	background -webkit-linear-gradient(left,#467b31 21%,#fff 20%)
	background linear-gradient(to right,#467b31 21%,#fff 20%)
	border-radius 10px
	border 1px solid #ddd
	@media (max-width: 989px)
		background #fff !important
	h3
		color #467b31
		font-weight 700
	img
		// margin-top 10px
		border-radius 50%
		border 4px solid #afbdc2
		max-width 100%
		@media (max-width: 989px)
			margin-bottom 15px
	ul
		list-style none
		margin 0px
		padding 0px
		li
			display inline-block
			margin-right 10px
			a
				color #467b31
				.fa
					color #fff
					border-radius 50%
				.fa-facebook
					background #00307c
					padding 6px 9px
				.fa-twitter
					background #00abff
					padding 5.5px 6.5px
				.fa-instagram
					background #795548
					padding 6px 7px
#contenedor-dondeir
	.box-paquete
		margin-bottom 3em
		border none
		box-sizing border-box
		position relative
		.figure
			img
				border-radius 10px 10px 0px 0px
		&:before
			content ""
			position absolute
			top 0px
			left 0px
			right 0px
			bottom 0px
			border 1px solid #ababab
			z-index 1
			opacity 1
			border-radius 6px
		&:hover
			box-shadow inset 0 0 0 3px #467b31
			border-radius 6px
			&:before
				opacity 1
				border 1px solid #467b31
			.figure
				img
					border-radius 10px 10px 0px 0px
				div
					opacity 1
			.content-paquete
				position relative
				h3
					border-bottom 1px solid #dd4617
		.figure
			position relative
			img
				max-width 100%
		.content-paquete
			padding 25px 20px
			background #fff
			min-height 205px
			h3
				font-size 19px
				color #dd4617
				font-weight 600
				margin-top 0px
				margin-left -10px
				border-bottom 1px solid transparent
				display inline-block
				padding-bottom 5px
				text-transform uppercase
			p
				font-size 17px
				color #353535
				margin-bottom 5px
				span
					background #dd4617
					color #fff
					padding 2px 10px
					font-size 15px
					font-weight 600
					border-radius 5px
					display inline-block
					margin-bottom 8px
			span
				color #dd4617
				text-decoration underline
				display block
				text-align right
	.box-content-vi
		.slider-imagenes
			margin-bottom 45px
			.item
				img
					// height 422px
					max-height 422px
					// @media (max-width: 480px)
					// 	min-height 320px
		.slider-videos
			display none
			.item-video
				height 247px
				// @media (max-width: 480px)
				// 	height 320px
		.owl-carousel
			.owl-prev
				position absolute
				top 47%
				left 20px
			.owl-next
				position absolute
				top 47%
				right 20px
			.owl-dots
				text-align center
				margin-top -50px
				position relative
				@media (max-width: 780px)
					margin-top -28px
				.owl-dot
					display inline-block
					zoom 1
					span
						width 10px
						height 10px
						margin 5px 7px
						background #db4617
						display block
						-webkit-backface-visibility visible
						transition opacity .2s ease
						border-radius 30px
					&.active,&:hover 
						span
							background #fff
		.botones
			position absolute
			top 25px
			right 0px
			z-index 1
			span
				background #fff
				color #dd4617
				display block
				font-size 25px
				line-height 0px
				margin-bottom 5px
				padding 5px
				position relative
				border-radius 0px 5px 5px 0px
				zoom 0.9
				transition: ease-out;
				&.active
					color #fff
					background #dd4617
					zoom 1
					&:before
						border-right 17px solid #dd4617
				&:before
					position absolute
					content ""
					border-top 18px solid transparent
					border-right 17px solid #fff
					border-bottom 17px solid transparent
					display block
					top 0px
					left -16px
				&:hover
					cursor pointer
					color #fff
					background #dd4617
					&:before
						border-right 17px solid #dd4617
	.itinerario
		padding 50px 53px
		background url(../img/bg2.jpg)center
		background-size cover
		border-radius 20px
		border 1px solid #ddd
		margin-bottom 20px
		position relative
		&:before
			content ""
			background #467b31
			width 20px
			height 5px
			position absolute
			top 50px
			left -10px
		>h3
			margin-left -36px
			@media (max-width: 600px)
				margin-left 0px
		h3
			margin-top 0px
		@media (max-width: 480px)
			padding 50px 50px
		h3
			color #457b30
			font-weight 700
		.mitaduno
			width 50%
			@media (max-width: 500px)
				width 100%
		.owl-carousel
				.owl-prev,.owl-next
					border 2px solid #9b9f9b
					padding 2px 12px
					border-radius 50%
					color #9b9f9b
					line-height 0px
					font-size 30px
					&:hover
						color #457b30
						border-color #457b30
				.owl-prev
					position absolute
					top 30%
					left -50px
				.owl-next
					position absolute
					top 30%
					right -50px
	.comentarios
		padding 50px 40px
		background url(../img/bg3.jpg)center
		background-size cover
		border-radius 20px
		border 1px solid #ddd
		margin-bottom 20px
		color #fff
		position relative
		&:before
			content ""
			background #dd4617
			width 20px
			height 5px
			position absolute
			top 50px
			left -10px
		h3
			font-weight 700
		.box-coment
			background #fff
			color #000
			padding 20px 20px 10px
			margin-bottom 15px
			border-radius 10px
			position relative
			&:before
				content ""
				position absolute
				border-top 18px solid transparent
				border-right 17px solid #fff
				border-bottom 17px solid transparent
				top 13px
				left -10px
				
			h4
				margin-top: 0px
				margin-bottom 5px
				font-weight 700
				color #467b31
				font-size 15px
			p
				line-height 16px
				font-size 13px
		textarea
			width 100%
			border-radius 10px
		.btn
			font-size 18px
			font-weight 700
			padding 8px 35px
			display inline-block
			box-shadow 0px 0px 8px #444
			@media (max-width: 480px)
				display block
				width 100%
		@media (max-width: 480px)
			.col-xs-offset-2
				border-top 2px solid #fff
				padding-top 10px
				width 100%
				margin-left 0
	.atractivos
		padding 40px 40px
		background url(../img/bg4.jpg)center
		background-size cover
		border-radius 20px
		border 1px solid #ddd
		margin-top 20px
		margin-bottom 20px
		color #fff
		position relative
		&:before
			content ""
			background #dd4617
			width 20px
			height 5px
			position absolute
			top 50px
			left -10px
		h3
			font-weight 700
			margin: 0px 0px 5px
		div
			padding 10px 0px
			position relative
			td
				padding-bottom 10px
			img
				max-width 50px
	.contacto-min
		border-radius 20px
		margin-bottom 20px
		padding 8px 40px
		border 1px solid #ddd
		position relative
		&:before
			content ""
			background #467b31
			width 20px
			height 5px
			position absolute
			top 50px
			left -10px
		h3
			color #467b31
			font-weight 700
		p
			span
				font-weight 700
		label
			color #467b31
			font-weight 400
		.form-control:focus
			outline 0px
			border-color #ddd
		.btn
			padding 8px 40px
			text-align center
			font-size 14px
			font-weight bold
.m-mas-mapa
