					margin 0px
					padding 0px
					li
						list-style none
						display inline-block
						font-size 11px
						color #000
						vertical-align top
						position relative
						padding-left 32px
						line-height 10px
						padding-top 8px
						max-width 115px
						margin-bottom 15px
						@media (max-width: 780px)
							    margin-bottom 13px
						i
							position absolute
							background #467b31
							color #fff
							line-height 0px
							padding 14px
							font-size 15px
							width 10px
							border-radius 50%
							top 0px
							left 0px
							&:before
								margin-left -8px
		.col-md-8
			padding-left 0px
			position relative
			@media (max-width: 780px)
				padding 0
			.slider-imagenes
				.item
					max-height 422px
			.slider-videos
				display none
				.item-video
					height 435px
					@media (max-width: 480px)
						height 320px
			.owl-carousel
				.owl-prev
					position absolute
					top 47%
					left 20px
				.owl-next
					position absolute
					top 47%
					right 20px
				.owl-dots
					text-align center
					margin-top -50px
					position relative
					@media (max-width: 780px)
						margin-top -28px
					.owl-dot
						display inline-block
						zoom 1
						span
							width 10px
							height 10px
							margin 5px 7px
							background #db4617
							display block
							-webkit-backface-visibility visible
							transition opacity .2s ease
							border-radius 30px
						&.active,&:hover 
							span
								background #fff
			.botones
				position absolute
				top 25px
				right 0px
				z-index 1
				span
					background #fff
					color #dd4617
					display block
					font-size 25px
					line-height 0px
					margin-bottom 5px
					padding 5px
					position relative
					border-radius 0px 5px 5px 0px
					zoom 0.9
					transition: ease-out;
					&.active
						color #fff
						background #dd4617
						zoom 1
						&:before
							border-right 17px solid #dd4617
					&:before
						position absolute
						content ""
						border-top 18px solid transparent
						border-right 17px solid #fff
						border-bottom 17px solid transparent
						display block
						top 0px
						left -16px
					&:hover
						cursor pointer
						color #fff
						background #dd4617
						&:before
							border-right 17px solid #dd4617
					
			.col-md-6
				text-align center
				.btn
					font-size 20px
					font-weight 700
					padding 8px 35px
					margin-top 6%
					@media (max-width: 780px)
						margin-top 0px
				.precio
					font-size 32px
					color #d14216
					font-weight 700
					position relative
					padding-left 54px
					line-height 25px
					display inline-block
					text-align left
					margin-top 4%
					i
						position absolute
						top 3px
						left 0px
						font-size 56px
					>span
						font-size 15px
					p
						span
							font-size 25px
