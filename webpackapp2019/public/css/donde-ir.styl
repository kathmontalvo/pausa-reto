.header-interno
	background url('../img/slider.jpg')center no-repeat
	background-size cover
	padding 220px 0 50px
	position relative
	.title-btn
		@media (max-width: 780px)
			text-align center
			margin-bottom 45px
		div
			display inline-block
			vertical-align middle
			position relative
			margin-left 29px
			padding-left 10px
			@media (max-width: 480px)
				margin-left 0px
			img
				border-radius 50%
				border 2px solid #ddd
				position absolute
				top -27px
				left 0px
				box-shadow 0px 0px 9px #222
				@media (max-width: 780px)
					top -15px
					width 80px
			a
				color #fff
				background #467b31
				padding 14px 40px 14px 10px
				float left
				font-weight 700
				font-size 13px
				@media (max-width: 780px)
					font-size 12px
					padding 10px 40px 7px 10px
				@media (max-width: 480px)
					font-size 12px
					padding 10px 40px 7px 2px
			span
				font-size 50px
				font-weight 700
				line-height 60px
				color #fff
				text-align left
				font-family "Smoothie Shoppe"
				text-shadow 0px 0px 13px #000
				&.min-titulo
					font-size 20px
					display block
					margin-top -16px
					font-family "Microsoft Tai Le"
					@media (max-width: 480px)
						font-size 20px
						margin-top -8px
				@media (max-width: 780px)
					padding-right 10px
					&:before
						display none
				@media (max-width: 480px)
					font-size 50px
					display block
	.btn
		padding 8px 35px
		font-size 20px
		font-weight 700
