.slider-home
	background url('../img/slider.jpg')center no-repeat
	background-size cover
	padding 150px 0px 80px
	position relative
	#search
		position relative
		color #727272
		button
			display inline-block
			position absolute
			top 7px
			right 15px
			font-size 20px
			cursor pointer
			background transparent
			border 0px
		#search-input
			border-radius 17px
			background rgba(255,255,255,0.8)
			&::placeholder
				color #727272
	h2
		font-size 60px
		font-family "Smoothie Shoppe"
		text-align center
		color #fff
		line-height 77px
		font-weight 700
		text-shadow 0px 0px 13px #000
		img
			max-width 100%
	.abajo-h
		color #fff
		padding 6px 12px
		border 2px solid #fff
		line-height 0px
		border-radius 50%
		font-size 33px
		margin-top 40px
		display none
		&:hover
			background #427c30 
.hr-slider-arriba
	position relative
	span
		width 16.66%
		border 4px solid
		float left
		&.uno
			border-color #2c5e2c
		&.dos
			border-color #467b31
		&.tres
			border-color #204191
		&.cuatro
			border-color #f8b400
		&.cinco
			border-color #dd4617
		&.seis
			border-color #78423b
.section-paquete
	.item-c-h
		display none
		padding 0px 90px
		.owl-paquetes
			position relative
			.owl-prev,.owl-next
				border 2px solid #9b9f9b
				padding 2px 3px
				border-radius 50%
				color #9b9f9b
				line-height 0px
				font-size 30px
				&:hover
					color #457b30
					border-color #457b30
			.owl-prev
				position absolute
				top 30%
				left -50px
			.owl-next
				position absolute
				top 30%
				right -50px
			.mas-info
				position absolute
				right 20px
				font-size 25px
				color #dd4617
				z-index 999
				@media (max-width: 600px)
					top 382px
				@media (max-width: 568px)
					top 365px
				@media (max-width: 414px)
					top 245px
				@media (max-width: 384px)
					top 237px
				@media (max-width: 375px)
					top 233px
				@media (max-width: 320px)
					top 198px
	a
		&:hover
			text-decoration none
.box-ruta-pack
	@media (max-width: 605px)
		width 100% !important
		.figure
			img 
				width 100%
			
	.mas-info
		position absolute
		right 30px
		font-size 25px
		color #dd4617
		z-index 999
		display none
		@media (max-width: 600px)
			display block
			top 385px
		@media (max-width: 568px)
			top 368px
		@media (max-width: 414px)
			top 265px
		@media (max-width: 384px)
			top 243px
		@media (max-width: 375px)
			top 240px
		@media (max-width: 320px)
			top 202px
.box-paquete
	margin-bottom 3em
	border none
	box-sizing border-box
	position relative
	.figure
		img
			border-radius 10px 10px 0px 0px
	&:before
		content ""
		position absolute
		top 0px
		left 0px
		right 0px
		bottom 0px
		border 1px solid #ababab
		z-index 1
		opacity 1
		border-radius 6px
	&:hover
		box-shadow inset 0 0 0 3px #467b31
		border-radius 6px
		&:before
			opacity 1
			border 1px solid #467b31
		.figure
			img
				border-radius 10px 10px 0px 0px
			div
				opacity 1
		.content-paquete
			background #fff
			position relative
			h3
				border-bottom 1px solid #dd4617
	.figure
		position relative
		img
			max-width 100%
		div
			position absolute
			background rgba(0,0,0,0.8)
			top 0px
			left 0px
			right 0px
			bottom 0px
			opacity 0
			border-radius 10px 10px 0px 0px
			p
				color #fff
				padding 30px
				span
					font-weight bold
	.content-paquete
		padding 25px 20px
		background #eaeaea
		min-height 228px
		h3
			font-size 19px
			color #dd4617
			font-weight 600
			margin-top 0px
			margin-left -10px
			border-bottom 1px solid transparent
			display inline-block
			padding-bottom 5px
			text-transform uppercase
		p
			font-size 17px
			color #353535
			margin-bottom 5px
			span
				background #dd4617
				color #fff
				padding 2px 10px
				font-size 15px
				font-weight 600
				border-radius 5px
				display inline-block
				margin-top 0px
				margin-bottom 8px
		span
			border 1px solid #ababab
			color #ababab
			font-size 14px
			padding 5px 8px
			margin-top 7px
			background #fff
			display inline-block
