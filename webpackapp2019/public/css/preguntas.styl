.slider-home
	background url('../img/slider.jpg')center no-repeat
	background-size cover
	padding 150px 0px 80px
	position relative
	#search
		position relative
		color #000
		label
			display inline-block
			position absolute
			top 5px
			right 15px
			font-size 20px
		#search-input
			border-radius 17px
			background rgba(255,255,255,0.8)
			&::placeholder
				color #000
	h2
		font-size 60px
		font-family "Smoothie Shoppe"
		font-weight 700
		text-align center
		color #fff
		text-shadow 0px 0px 4px #000
		line-height 77px
		text-shadow 0px 0px 13px #000
		img
			max-width 100%
	.abajo-h
		color #fff
		padding 6px 12px
		border 2px solid #fff
		line-height 0px
		border-radius 50%
		font-size 33px
		margin-top 40px
		display none
		&:hover
			background #427c30 
.hr-slider-arriba
	position relative
	span
		width 16.66%
		border 4px solid
		float left
		&.uno
			border-color #2c5e2c
		&.dos
			border-color #467b31
		&.tres
			border-color #204191
		&.cuatro
			border-color #f8b400
		&.cinco
			border-color #dd4617
		&.seis
			border-color #78423b
.section-preguntas
	padding-top 0px
	.box-preguntas
		margin 4em 66px
		padding 30px 60px
		border-radius 10px
		background #fff
		border 1px solid #bbb
		h4
			color #467b31
			font-size 20px
			position relative
			font-weight 700
			margin 0px
			margin-bottom 15px
			i
				color #467b31
				font-weight bold
				font-size 26px
				vertical-align middle
		.raya
			border-bottom 1px dashed #b3aaaa
			display block
			margin-bottom 2em
		.lista-preguntas
			position relative
			padding-bottom 2em
			span
				position absolute
				top 0px
				left 0px
				font-size 20px
				text-align center
				width 42px
				border 2px solid #467b31
				color #467b31
				line-height 20px
				padding 10px 0px
				border-radius 6px
				font-weight bold
			.item-pregunta
				padding-left 60px
				h4
					margin-bottom 10px
@media (max-width: 601px)
	.slider-home
		.abajo-h
			display inline-block
		.hr-slider
			padding 0px
	.section-preguntas 
		.box-preguntas
			margin 4em 0px
@media (max-width: 420px)
	.section-preguntas
		.box-preguntas
			padding 30px 15px